@model ApplyOnline.Models.Email
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var random = new Random();

}


<!DOCTYPE html>
<html>
<head>
    <title>MICT Seta Syllabus</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/MyScripts/jquery.waterwheelCarousel.js"></script>
    <script src="~/MyScripts/jquery.waterwheelCarousel.min.js"></script>
    <link href="~/Css/carousel.css" rel="stylesheet" />

</head>

<body>
    <div id="up"></div>

    <div class="body-content">


        <header>
            <div id="mySidenav" class="sidenav">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <a href="@Url.Action("Index","Home")">Home</a>
                <a href="#">Services</a>
                <a href="#">Clients</a>
                <a href="#">Contact</a>
                <a href="#email" class="scroll">Email Us</a>
            </div>

            <div class="menu-slider">
                <span onclick="openNav()">&#9776; MENU</span>

            </div>
            
        </header>

        <section class="sylla-section">


            <h3 class="heading">MICT SETA - SAQA Qualifications</h3>
            <div class="center">

                <div id="carousel">
                    <img src="~/Images/bluecard.png" id="item-1" />
                    <img src="~/Images/yellowcard.png" id="item-2" />
                    <img src="~/Images/bluecard2.png" id="item-3" />
                    <img src="~/Images/yellowcard2.png" id="item-4" />
                    <img src="~/Images/bluecard.png" id="item-1" />

                </div>
                <a href="#" id="prev">Prev</a> | <a href="#" id="next">Next</a>

            </div>

        </section>
        <section class="section-map">
            <h3 class="heading">Our Location</h3>
            <div id="map"></div>
        </section>
    </div>

    <section class="send-email">

        <h3 class="heading">Send Us Your Question</h3>

        <div class="container">



            <div class="form-horizontal" id="email">
                @using (Html.BeginForm("Syllabus", "Syllabus"))
            {
                    @Html.ValidationSummary()


                    <fieldset>

                        <div class="form-group">

                            @Html.LabelFor(model => model.SentFrom, new { @class = "col-md-4 col-md-offset-4" })

                            <div class="col-md-4 col-md-offset-4">
                                @Html.TextBoxFor(model => model.SentFrom, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SentFrom)
                            </div>
                        </div>
                        <div class="form-group">

                            @Html.LabelFor(model => model.Subject, new { @class = "col-md-4 col-md-offset-4" })

                            <div class="col-md-4 col-md-offset-4">
                                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Subject)
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.Message, new { @class = "col-md-4 col-md-offset-4" })
                            <div class="col-md-4 col-md-offset-4">
                                @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @placeholder = "You may include your name in thet enquiry message, however it is optional." })
                                @Html.ValidationMessageFor(model => model.Message)
                                <div class="buttons">
                                    <input type="submit" name="submit" class="btn" value="Send" />
                                    <input type="reset" name="submit" class="btn" value="Reset" />

                                </div>

                            </div>


                        </div>


                    </fieldset>
                }
            </div>
        </div>




    </section>
    <section class="social" id="social">
        <div class="text-center">
            <h3 class="cont">Contact Information</h3>

            <a href="#up" class="scroll fa fa-arrow-up"></a><br />
            <text style="color:#fff;"><i class="fa fa-location-arrow">Location</i></text>
            <p style="color:#fff;">219 Surrey Place, Randburg, 2109, Johannesburg</p>

            <text style="color:#fff;"><i class="fa fa-phone">Call </i>  <i class="fa fa-envelope">Email</i></text>
            <p style="color:#fff;">Office +27 (11) 759 5930 - info@dynamicdna.co.za</p>

        </div>


    </section>


    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "150px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            var carousel = $("#carousel").waterwheelCarousel({
                flankingItems: 3,
                movingToCenter: function ($item) {
                    $('#callback-output').prepend('movingToCenter: ' + $item.attr('id') + '<br/>');
                },
                movedToCenter: function ($item) {
                    $('#callback-output').prepend('movedToCenter: ' + $item.attr('id') + '<br/>');
                },
                movingFromCenter: function ($item) {
                    $('#callback-output').prepend('movingFromCenter: ' + $item.attr('id') + '<br/>');
                },
                movedFromCenter: function ($item) {
                    $('#callback-output').prepend('movedFromCenter: ' + $item.attr('id') + '<br/>');
                },
                clickedCenter: function ($item) {
                    $('#callback-output').prepend('clickedCenter: ' + $item.attr('id') + '<br/>');
                }
            });

            $('#prev').bind('click', function () {
                carousel.prev();
                return false
            });

            $('#next').bind('click', function () {
                carousel.next();
                return false;
            });

            //$('#reload').bind('click', function () {
            //    newOptions = eval("(" + $('#newoptions').val() + ")");
            //    carousel.reload(newOptions);
            //    return false;
            //});

        });
    </script>
    <script>
        var slideIndex = 1;
        showDivs(slideIndex);

        function plusDivs(n) {
            showDivs(slideIndex += n);
        }

        function showDivs(n) {
            var i;
            var x = document.getElementsByClassName("mySlides");
            if (n > x.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = x.length }
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            x[slideIndex - 1].style.display = "block";
        }
    </script>
    <script>
        function myMap() {
            var myCenter = new google.maps.LatLng(-26.0951756, 27.998679700000025);
            var mapCanvas = document.getElementById("map");
            var mapOptions = { center: myCenter, zoom: 5 };
            var map = new google.maps.Map(mapCanvas, mapOptions);
            var marker = new google.maps.Marker({ position: myCenter });
            marker.setMap(map);
        }
    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA6I0udxhaIloq_3-9wDMJ6N_Fv45ZzBPQ&callback=myMap"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 2000);
            });
        });
    </script>

</body>
</html>
