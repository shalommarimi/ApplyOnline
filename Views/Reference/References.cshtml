@model ApplyOnline.Models.Reference


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>References</title>
</head>
<body>


    <section class="section-apply">



        @using (Html.BeginForm("References", "Reference"))
        {
            @Html.AntiForgeryToken()


            <div class="form-horizontal">

                <div id="cvsection">
                    <h3>References</h3>
                </div>



                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.RefCompany, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.RefCompany, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                @Html.ValidationMessageFor(model => model.RefCompany, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ContactPerson, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.ContactPerson, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                @Html.ValidationMessageFor(model => model.ContactPerson, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.RefEmail, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.RefEmail, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                @Html.ValidationMessageFor(model => model.RefEmail, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">

                            <input type="reset" value="Reset" class="btn btn-default" />
                            <input type="submit" value="Submit & Continue" class="btn btn-default" />

                        </div>
                    </div>
                </div>
            </div>
        }


    </section>

</body>
</html>
