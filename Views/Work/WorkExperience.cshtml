@model ApplyOnline.Models.WorkExprience


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Work Experience</title>
</head>
<body>


    <section class="section-apply">



        @using (Html.BeginForm("WorkExperience", "Work"))
        {
            @Html.AntiForgeryToken()


            <div class="form-horizontal">

                <div id="cvsection">
                    <h3>Work Experiences</h3>
                </div>



                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.WorkCompany, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.WorkCompany, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                @Html.ValidationMessageFor(model => model.WorkCompany, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.WorkTitle, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.WorkTitle, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                @Html.ValidationMessageFor(model => model.WorkTitle, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.WorkStartedFrom, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.WorkStartedFrom, new { htmlAttributes = new { @class = "form-control form-control-lg date-picker" } })
                                @Html.ValidationMessageFor(model => model.WorkStartedFrom, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.WorkTo, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.WorkTo, new { htmlAttributes = new { @class = "form-control form-control-lg date-picker" } })
                                @Html.ValidationMessageFor(model => model.WorkTo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.WhyQuitWork, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.WhyQuitWork, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                @Html.ValidationMessageFor(model => model.WhyQuitWork, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>





                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">

                            <input type="reset" value="Reset" class="btn btn-default" />
                            <input type="submit" value="Submit & Continue" class="btn btn-default" />

                        </div>
                    </div>
                </div>
            </div>
        }


    </section>
    <script type="text/javascript">
    $(function () {
        // This will make every element with the class "date-picker" into a DatePicker element
        $('.date-picker').datepicker();
    })
    </script>
</body>
</html>
