@model ApplyOnline.Models.Qualification


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Qualifications</title>
</head>
<body>


    <section class="section-apply">



        @using (Html.BeginForm("Qualification", "Education"))
        {
            @Html.AntiForgeryToken()


            <div class="form-horizontal">

                <div id="cvsection">
                    <h3>Educational Qualifications</h3>
                </div>



                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.QualField, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.QualField, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.QualField, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.FkQualLevelId, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.FkQualLevelId, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FkQualLevelId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Institution, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Institution, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Institution, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.QualYearObtained, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.QualYearObtained, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.QualYearObtained, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>





                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">

                            <input type="reset" value="Reset" class="btn btn-default" />
                            <input type="submit" value="Submit & Continue" class="btn btn-default"/>

                        </div>
                    </div>
                </div>
            </div>
        }


    </section>

</body>
</html>
